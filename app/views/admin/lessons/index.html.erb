<h2>課程瀏覽</h2>
<div class="block">

	<table class="data display datatable" id="example">
		<thead>
			<tr>
				<th>課程名稱</th>
				<th>課程分類</th>
				<th>課程敘述</th>
				<th>講師</th>
				<th>報名日期</th>
				<th>上課日期</th>
				<th>上課地點</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @lessons.each do |lesson| %>
			<tr class="odd gradeX">
				<td align="center"><%= lesson.title %></td>
				<td align="center"><%= lesson.lessoncate.name %></td>
				<td><%= lesson.description %></td>
				<td align="center"><%= lesson.consultant.name %></td>
				<td align="center"><%= lesson.singtime %></td>
				<td align="center"><%= lesson.classtime %></td>
				<td align="center"><%= lesson.place %></td>
				<td><a href="/admin/lessons/<%= lesson.id %>">查看</a></td>
				<td><a href="/admin//lessons/<%= lesson.id %>/edit">編輯</a></td>
				<td><%= link_to '刪除', lesson, method: :delete, data: { confirm: '你確定嗎?' } %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<br />

	<a href="/admin/lessons/new">新增課程</a>
</div>
